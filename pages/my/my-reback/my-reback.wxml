<scroll-view scroll-y class="scrollPage">
  <my-detail content="{{content}}" tabs="{{tabs}}" bind:tabCurEvent="tabChange">
    <view slot="body">
      <view class="cu-card article">
        <view class="cu-item shadow arrow" bindtap='toMyRebackDetail'>
          <view class="title">
            <view class="text-cut" style='float: left'>车辆故障</view>
            <view style='float: right'>
               <text class='text-content text-grey' style='margin-right: 10rpx;font-size: 25rpx;font-weight: 300;'>昨天17:55</text>
            </view>
          </view>
          <view class="content" style="clear: both;">
            <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="aspectFill"></image>
            <view class="desc">
              <view class="text-content"> 
                车辆离合器和刹车出问题！
                <view class="cu-tag bg-blue light sm round">车名： 车辆A</view>
                <view class="cu-tag bg-green light sm round">提出人：xiaoyang</view>
              </view>
              <view>
                <view class="cu-tag bg-red light sm round">故障</view>  
              </view>
            </view>
          </view>
        </view>
      </view>  
    </view>
  </my-detail>
</scroll-view>

